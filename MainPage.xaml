<Page
    x:Class="GaveAndBodyTrack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GaveAndBodyTrack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="white"
    Foreground="white"
    Loaded="Page_Loaded">

    <Grid>
        <Canvas>
            <Image x:Name="imgFatBird" HorizontalAlignment="Left" Height="50" Canvas.Top="10" Canvas.Left="10" VerticalAlignment="Top" Width="50" Source="Assets/FatBird.png" Stretch="Fill">
                <Image.RenderTransform>
                    <TranslateTransform X="-50" Y="-50"/>
                </Image.RenderTransform>
            </Image>
            <Ellipse x:Name="LeftEyePositionEllipse" Opacity="0.5" Width="100" Height="100" Canvas.Top="10" Canvas.Left="10" Fill="red" VerticalAlignment="Top" HorizontalAlignment="Left" ManipulationMode="System">
                <Ellipse.RenderTransform>
                    <TranslateTransform X="-50" Y="-50"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <TextBox x:Name="txtStatus" Canvas.Left="208" Canvas.Top="163" Text="TextBox" TextWrapping="Wrap" Height="49" Width="133"/>
        </Canvas>
    </Grid>
</Page>
